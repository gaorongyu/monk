<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${monk.jdbc.driverClassName}" />
        <property name="url" value="${monk.jdbc.url}" />
        <property name="username" value="${monk.jdbc.username}" />
        <property name="password" value="${monk.jdbc.password}" />
        <property name="maxWait" value="30000" />
        <property name="initialSize" value="8" />
        <property name="maxActive" value="128" />
        <property name="maxIdle" value="32" />
        <property name="minIdle" value="8" />
        <property name="minEvictableIdleTimeMillis" value="3600000" />
        <property name="timeBetweenEvictionRunsMillis" value="600000" />
        <property name="numTestsPerEvictionRun" value="16" />
        <property name="testOnBorrow" value="false" />
        <property name="testWhileIdle" value="true" />
        <property name="validationQuery" value="select 1" />
        <property name="validationQueryTimeout" value="3" />
        <property name="removeAbandoned" value="true" />
    </bean>

</beans>